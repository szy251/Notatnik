<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability_main1"
    ohos:alignment="center">

    <ScrollView
        ohos:background_element="#00FFFFFF"
        ohos:width="466px"
        ohos:height="match_parent"
        ohos:id="$+id:scroll_opcje_sorting"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:min_height="466px"
            ohos:width="466px"
            ohos:orientation="vertical"
            ohos:background_element="#FF000000">
            <RadioContainer
                ohos:top_padding="180px"
                ohos:bottom_padding="150px"
                ohos:id="$+id:radio_container_sorting"
                ohos:height="match_content"
                ohos:width="330px"
                ohos:layout_alignment="center"
                ohos:orientation="vertical"
                >
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:def_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Default"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:def_rev_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Default reverse"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:title_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Title"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:title_rev_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Title reverse"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:type_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Type"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:type_rev_sort"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Type  reverse"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
            </RadioContainer>
        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:accept_sorting"
        ohos:height="100px"
        ohos:width="100px"
        ohos:background_element="$graphic:przycisk_turquoise"
        ohos:text="✓"
        ohos:text_size="90px"
        />
    <Button
        ohos:background_element="$graphic:przycisk_turquoise"
        ohos:text_size="90px"
        ohos:id="$+id:decline_sorting"
        ohos:bottom_padding="10px"
        ohos:text="✗"
        ohos:height="100px"
        ohos:width="100px"
        />

</PositionLayout>