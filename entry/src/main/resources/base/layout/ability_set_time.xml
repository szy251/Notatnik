<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_ability_main"
    ohos:orientation="vertical">

    <TimePicker
        ohos:width="220px"
        ohos:height="290px"
        ohos:id="$+id:timepicker"
        ohos:operated_text_color="#FF00947D"
        ohos:selected_text_color="$color:white"
        ohos:normal_text_size="25px"
        ohos:selected_text_size="35px"
        />

    <Button
        ohos:id="$+id:accept_time"
        ohos:height="100px"
        ohos:width="100px"
        ohos:background_element="$graphic:przycisk_turquoise"
        ohos:text="✓"
        ohos:text_size="90px"
        />
    <Button
        ohos:background_element="$graphic:przycisk_turquoise"
        ohos:text_size="90px"
        ohos:id="$+id:decline_time"
        ohos:bottom_padding="10px"
        ohos:text="✗"
        ohos:height="100px"
        ohos:width="100px"
        />

</PositionLayout>