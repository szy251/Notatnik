<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_ability_main"
    ohos:orientation="vertical">
    <Switch
        ohos:id="$+id:on_off"
        ohos:height="60px"
        ohos:width="150px"
        ohos:track_element="$graphic:track_state_element"
        ohos:thumb_element="$graphic:thumb_state_element"
        />
    <Button
        ohos:id="$+id:hour_change"
        ohos:height="90px"
        ohos:width="366px"
        ohos:background_element="$graphic:tytuly"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="horizontal_center"
        ohos:text="Time"
        ohos:text_color="#FFFFFFFF"
        ohos:text_size="40px"
        ohos:bottom_padding="30px"
        />
    <Button
        ohos:id="$+id:repeat_change"
        ohos:height="90px"
        ohos:width="366px"
        ohos:background_element="$graphic:tytuly"
        ohos:layout_alignment="horizontal_center"
        ohos:text_alignment="horizontal_center"
        ohos:text="Repeat"
        ohos:text_color="#FFFFFFFF"
        ohos:text_size="40px"
        ohos:bottom_padding="30px"
        />
    <Text
        ohos:id="$+id:hour"
        ohos:height="25px"
        ohos:width="200px"
        ohos:background_element="#00FFFFFF"
        ohos:text_color="#FF9F9F9F"
        ohos:text_alignment="center"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:addnotyfication_HelloWorld"
        ohos:text_size="20px"
        />
    <Text
        ohos:id="$+id:repeat"
        ohos:height="25px"
        ohos:width="300px"
        ohos:background_element="#00FFFFFF"
        ohos:text_color="#FF9F9F9F"
        ohos:text_alignment="center"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Mo., Tu., We., Th., Fr., Sa., Su."
        ohos:text_size="20px"
        />
    <Button
        ohos:id="$+id:accept_notyfiy"
        ohos:height="100px"
        ohos:width="100px"
        ohos:background_element="$graphic:przycisk"
        ohos:text="✓"
        ohos:text_size="90px"
        />
    <Button
        ohos:background_element="$graphic:przycisk"
        ohos:text_size="90px"
        ohos:id="$+id:decline_notyfi"
        ohos:bottom_padding="10px"
        ohos:text="✗"
        ohos:height="100px"
        ohos:width="100px"
        />

</PositionLayout>