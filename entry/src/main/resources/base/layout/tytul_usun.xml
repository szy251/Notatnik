<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="466px"
    ohos:id="$+id:tytul_usun"
    ohos:alignment="center"
    ohos:orientation="horizontal">
    <DirectionalLayout
        ohos:background_element="$graphic:tytuly"
        ohos:height="match_content"
        ohos:width="366px"
        ohos:orientation="horizontal"
        ohos:layout_alignment="center"
        ohos:bottom_margin="12px"
        ohos:top_margin="12px"
        >
    <Text
        ohos:background_element="#00FFFFFF"
        ohos:id="$+id:nazwa_usun"
        ohos:height="match_content"
        ohos:width="200px"
        ohos:text_size="50px"
        ohos:text_color="#FFFFFFFF"
        ohos:text_alignment="center"
        ohos:left_margin="50px"
        />
    <Checkbox
        ohos:id="$+id:checkbox"
        ohos:height="70px"
        ohos:width="70px"
        ohos:layout_alignment="vertical_center"
        ohos:check_element="✔"
        ohos:text="✔"
        ohos:text_size="64px"
        ohos:text_color="#FF000000"
        />
    </DirectionalLayout>
</DirectionalLayout>