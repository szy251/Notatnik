<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$graphic:background_ability_main"
    ohos:alignment="center">

    <ScrollView
        ohos:background_element="#00FFFFFF"
        ohos:width="466px"
        ohos:height="match_parent"
        ohos:id="$+id:scroll_opcje_tlo"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:min_height="466px"
            ohos:width="466px"
            ohos:orientation="vertical"
            ohos:background_element="#FF000000">
            <RadioContainer
                ohos:top_padding="180px"
                ohos:bottom_padding="150px"
                ohos:id="$+id:radio_container"
                ohos:height="match_content"
                ohos:width="330px"
                ohos:layout_alignment="center"
                ohos:orientation="vertical"
                >
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:gray"
                    ohos:background_element="$graphic:tytuly_gray"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Gray"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:blue"
                    ohos:background_element="$graphic:tytuly_blue"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Blue"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:red"
                    ohos:background_element="$graphic:tytuly_red"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Red"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:turquoise"
                    ohos:background_element="$graphic:tytuly_turquoise"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Turquoise"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:lime"
                    ohos:background_element="$graphic:tytuly_lime"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Lime"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:purple"
                    ohos:background_element="$graphic:tytuly_purple"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Purple"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:orange"
                    ohos:background_element="$graphic:tytuly_orange"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Orange"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
                <RadioButton
                    ohos:layout_alignment="center"
                    ohos:right_padding="25px"
                    ohos:id="$+id:mint"
                    ohos:background_element="$graphic:tytuly_mint"
                    ohos:height="66px"
                    ohos:width="330px"
                    ohos:text="Mint"
                    ohos:text_size="36px"
                    ohos:text_color="#FFFFFFFF"
                    ohos:text_color_off="$color:white"
                    ohos:text_color_on="$color:white"
                    ohos:check_element="$graphic:kropka_stan"
                    ohos:bottom_margin="25px"
                    />
            </RadioContainer>
        </DirectionalLayout>
    </ScrollView>

    <Button
        ohos:id="$+id:accept_tlo"
        ohos:height="100px"
        ohos:width="100px"
        ohos:text="✓"
        ohos:text_size="90px"
        />
    <Button
        ohos:text_size="90px"
        ohos:id="$+id:decline_tlo"
        ohos:bottom_padding="10px"
        ohos:text="✗"
        ohos:height="100px"
        ohos:width="100px"
        />

</PositionLayout>