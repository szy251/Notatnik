<?xml version="1.0" encoding="utf-8"?>
<PositionLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_ability_main"
    ohos:orientation="vertical">
    <TextField
        ohos:height="300px"
        ohos:top_padding="30px"
        ohos:width="350px"
        ohos:id="$+id:dodaj_tersc"
        ohos:multiple_lines="true"
        ohos:text_alignment="center"
        ohos:layout_alignment="center"
        ohos:text_input_type="pattern_text"
        ohos:input_enter_key_type="enter_key_type_go"
        ohos:text_color="#FFB5B5B5"
        ohos:background_element="#FF000000"
        ohos:text_size="40px"
        ohos:hint="Add title"
        />
    <Button
        ohos:height="100px"
        ohos:width="100px"
        ohos:id="$+id:akceptuj_tresc"
        ohos:layout_alignment="center"
        ohos:text="✓"
        ohos:text_size="90px"
        />
    <Button
        ohos:height="100px"
        ohos:width="100px"
        ohos:id="$+id:anuluj_tresc"
        ohos:layout_alignment="center"
        ohos:text="✗"
        ohos:text_size="90px"
        ohos:bottom_padding="10px"
        />

</PositionLayout>